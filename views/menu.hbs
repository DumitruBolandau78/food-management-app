                </div>
            </div>
            {{/each}}
        </div>
        <form method="POST" action="/management/{{id}}/payment" class="cart">
            <div class="cart-title">Produse selectate</div>
            <input type="hidden" name="_csrf" value="{{@root.csrf}}">
            <button type="submit" class="submit" style="display: none;"></button>
        </form>
    </div>
    <div class="options">
        <button><a href="/management">Anulare comanda</a></button>
        <button  type="submit" onclick="openPopup()" style="cursor: pointer;">
            <div class="confirm">Confima</div>
        </button>
    </div>
</section>

<div class="popup-payment">
    <div class="inner">
        <h3 class="title-popup">Confirmati plata?</h3>
        <div class="popup-price"><span>Plata totala: </span> <span class="total-price">200 RON</span></div>
        <div class="options">
            <button class="yes" onclick="autoclick()">Da</button>
            <button class="no" onclick="closePopup()">Nu</button>
        </div>
    </div>
</div>


<script>
    function openPopup(){
        document.querySelector('.popup-payment').classList.add('active-payment');
    }

    function autoclick() {
        document.querySelector('.menu-wrapper .cart .submit').click();
    }

    function closePopup(){
        document.querySelector('.popup-payment').classList.remove('active-payment');
    }
</script>