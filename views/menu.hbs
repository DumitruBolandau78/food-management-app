<section class="menu-wrapper">
    <div class="logout">
        <a href="/account/logout">Log out <i class="fa-solid fa-arrow-right"></i></a>
    </div>
    <div class="menu">
        <div class="categories">
            <div class="kitchen">
                <div class="category-title">Bucatarie</div>
                <ul>
                    <li class="active-category sushi">Sushi</li>
                    <li class="pizza">Pizza</li>
                    <li class="fast-food">Fast Food</li>
                </ul>
            </div>
            <div class="beverage">
                <div class="category-title">Bar</div>
                <ul>
                    <li class="juice">Suc</li>
                    <li class="natural-juice">Suc natural</li>
                    <li class="coffe">Cafea</li>
                </ul>
            </div>
        </div>
        <div class="products">
            {{#each sushi}}
            <div class="product sushi active-product">
                <div class="product-image">
                    <img src="{{urlImage}}" alt="{{name}}">
                </div>
                <div class="info-product">
                    <div class="title-product">{{name}}</div>
                    <div class="price">{{price}} RON</div>
                    <div class="options-product">
                        <input type="number" name="amount" max="50" min="1" value="1">
                        <button>Cumpara</button>
                    </div>
                </div>
            </div>
            {{/each}}
